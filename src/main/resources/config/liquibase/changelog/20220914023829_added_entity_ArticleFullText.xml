    <!--
        Added the entity ArticleFullText.
    -->
    <changeSet id="20220914023829-1" author="jhipster">
        <createTable tableName="article_full_text">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="text" type="${clobType}">
                <constraints nullable="true" />
            </column>
            <column name="html" type="${clobType}">
                <constraints nullable="true" />
            </column>
            <column name="public_access" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="article_id" type="bigint">
                <constraints nullable="true" unique="true" uniqueConstraintName="ux_article_full_text__article_id" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>

